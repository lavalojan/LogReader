<AnchorPane fx:controller="com.mrppa.logreader.ui.controller.AboutController"
	xmlns:fx="http://javafx.com/fxml" prefHeight="250" prefWidth="800">
	<VBox AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
		AnchorPane.rightAnchor="0.0">
		<HBox styleClass="aboutTopBox">
			<ImageView fx:id="aboutImg" styleClass="aboutImg"></ImageView>
			<Separator orientation="VERTICAL"></Separator>
			<VBox>
				<Label style="-fx-font-weight: bold;">LogReader, Large log file reading utility</Label>
				<Label fx:id="versionLabel"></Label>
				<Label fx:id="javaVersionLabel"></Label>
				<Label fx:id="osNameLabel"></Label>
			</VBox>
		</HBox>
	</VBox>
	<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
		AnchorPane.rightAnchor="0.0">
		<Hyperlink fx:id="linktoSite" text="https://github.com/mrppa/LogReader"	underline="true"></Hyperlink>
		<Separator orientation="HORIZONTAL"></Separator>

		<Label text="Contributors"></Label>
		<Label text="Pasindu Ariyarathna(www.mrppa.com)"></Label>
	</VBox>
</AnchorPane>
